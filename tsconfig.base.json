{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],
    "baseUrl": ".",
    "paths": {
      "@error-handler/*": [
        "packages/error-handler/*"
      ],
      "@localgoods/prisma": [
        "packages/libs/prisma/index.ts"
      ]
    }
  },
  "references": [
    {
      "path": "packages/error-handler/tsconfig.lib.json"
    }
  ]
}
